<GameInformation>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/SpaceBackground.png'

    
    Button: 
        id: info_back_btn
        size_hint: None, None
        size: root.width * 0.4, root.height * .10
        pos_hint: {'center_x': 0.5, 'center_y': 0.10}
        background_color: 0,0,0,0
        on_press: root.on_button_press(self)

        AsyncImage:
            id: info_back_btn_image
            source: 'images/back_button.png'
            size_hint: None, None
            size: self.parent.size  # Adjusted to size relative to the Button
            pos: self.parent.pos  # Adjusted to position relative to the Button
            allow_stretch: True
            keep_ratio: True
    
    AsyncImage:
        id: slow_fall_background
        source: 'images/empty_button.png'
        pos_hint: {'center_x': .1, 'center_y': .85}
        size: (self.parent.width *.15, self.parent.height * .15)
        size_hint: (None, None)
        allow_stretch: True

    AsyncImage:
        id: slow_fall
        source: 'images/hourglass.gif'
        pos_hint: {'center_x': .1, 'center_y': .85}
        size: (self.parent.width * .08, self.parent.height * .08)
        size_hint: (None, None)
        allow_stretch: True

    AsyncImage:
        id: star_ability_background
        source: 'images/empty_button.png'
        pos_hint: {'center_x': .1, 'center_y': .7}
        size: (self.parent.width *.15, self.parent.height * .15)
        size_hint: (None, None)
        allow_stretch: True

    AsyncImage:
        id: star_ability
        source: 'images/star.png'
        pos_hint: {'center_x': .1, 'center_y': .7}
        size: (self.parent.width * .18, self.parent.height * .18)
        size_hint: (None, None)

    AsyncImage:
        id: asteroid_icon_background
        source: 'images/empty_button.png'
        pos_hint: {'center_x': .1, 'center_y': .55}
        size: (self.parent.width *.15, self.parent.height * .15)
        size_hint: (None, None)
        allow_stretch: True

    AsyncImage:
        id: asteroid_icon
        source: 'images/Brown_Ore1.gif'
        pos_hint: {'center_x': .1, 'center_y': .55}
        size: (self.parent.width * .08, self.parent.height * .08)
        size_hint: (None, None)
        allow_stretch: True

    AsyncImage:
        id: asteroid_icon_background
        source: 'images/empty_button.png'
        pos_hint: {'center_x': .1, 'center_y': .4}
        size: (self.parent.width *.15, self.parent.height * .15)
        size_hint: (None, None)
        allow_stretch: True

    AsyncImage:
        id: asteroid_icon
        source: 'images/coin.gif'
        pos_hint: {'center_x': .1, 'center_y': .4}
        size: (self.parent.width * .08, self.parent.height * .08)
        size_hint: (None, None)
        allow_stretch: True

    

    Label:
        id: slow_fall_details
        text: "Navigate your spaceship into these falling slow falls to slow down the asteroids for 10 seconds!"
        height: self.texture_size[1]
        size_hint_x: None
        width: root.width * .6
        text_size: self.width, None
        halign: 'right'
        valign: 'top'
        padding: 10
        pos_hint: {'center_x': .55, 'center_y': .85}
        multiline: True
        font_name: 'fonts/yoster.ttf'
        color: 1,1,1,1

        canvas.after:
            Line:
                points: [self.x, self.y -25, self.x + self.width, self.y -25]
                width: 8  # Adjust line width as needed
                
            
    
    Label:
        id: star_ability_details
        text: "Navigate your spaceship to hit these Super Stars to be bypass falling asteroids for 10 seoncds!"
        height: self.texture_size[1]
        size_hint_x: None
        width: root.width * .6
        text_size: self.width, None
        halign: 'right'
        valign: 'top'
        padding: 10
        pos_hint: {'center_x': .55, 'center_y': .7}
        multiline: True
        font_name: 'fonts/yoster.ttf'
        
    Label:
        id: asteroid_icon_details
        text: "The Asteroids will fall down the screen faster as your spaceship speeds up! Avoid them!"
        height: self.texture_size[1]
        size_hint_x: None
        width: root.width * .6
        text_size: self.width, None
        halign: 'right'
        valign: 'top'
        padding: 10
        pos_hint: {'center_x': .55, 'center_y': .55}
        multiline: True
        font_name: 'fonts/yoster.ttf'

    Label:
        id: coin_details
        text: "Navigate your spaceship into these falling coins and collect enough to unlock prizes!"
        height: self.texture_size[1]
        size_hint_x: None
        width: root.width * .6
        text_size: self.width, None
        halign: 'right'
        valign: 'top'
        padding: 10
        pos_hint: {'center_x': .55, 'center_y': .40}
        multiline: True
        font_name: 'fonts/yoster.ttf'
        color: 1,1,1,1

        
        

        


        
        


